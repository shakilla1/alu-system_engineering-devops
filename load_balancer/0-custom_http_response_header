#!/usr/bin/env bash
# Configure Nginx with custom HTTP header

set -e  # Exit immediately if a command fails

# Update and install Nginx
sudo apt-get update -y
sudo apt-get install -y nginx

# Create a simple index page showing the hostname
echo "Welcome to $(hostname)" | sudo tee /var/www/html/index.html > /dev/null

# Configure default site with custom header
sudo tee /etc/nginx/sites-available/default > /dev/null <<'EOF'
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html;

    server_name _;

    # Custom header to show which server handled the request
    add_header X-Served-By $hostname;

    location / {
        try_files $uri $uri/ =404;
    }
}
EOF

# Test and reload Nginx
sudo nginx -t && sudo systemctl reload nginx
echo "Nginx configured successfully with X-Served-By header."
